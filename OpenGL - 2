#include<GL/glut.h>
void display()
{
 getClear(GL_COLOR_BUFFER_BIT);
 glColr3f(0.0f,0.0f,0.0f);
 glBegin(GL_LINES);
for(int i=0;i<=400;i+=20)
   {
     glVertex2i(i,0);
     glVertex2i(i,400);
   }
for(int j=0;j<=400;j+=200)
   {
     glVertex2i(0,j);
     glVertex2i(400,j);
    }
    glEnd();
    glFlush();
}
void init()
{
 glClearColor(1.0,1.0,1.0,1.0);
 glMatrixMode(GL_PROJECTION);
 glLoadIdentity();
 gluOrtho2D(0.0,400.0,0.0,400.0);
}
int main(int argc,char **argv)
{
 glutInit(&argc,argv);
 glutInitDisplayMode(GLUT_SINGLE|GLUT_RGB);
 glutInitWindowSize(400,400);
 glutCreateWindow("Simple Grid using GL lines");
 init();
 glutDisplayFunc(display);
 glutMainLoop();
return 0;
}
