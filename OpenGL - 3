#include<GL/glut.h>
void display()
{
 glClear(GL_COLOR_BUFFER_BIT);
 glColr3f(1.0f,0.0f,0.0f);
 glBegin(GL_LINES);
 glVerex2f(200,350);
 glVerex2f(250,150);
 glVerex2f(150,250);
 glVerex2f(200,250);
 glVerex2f(200,350);
 glEnd();
 glFlush();
}
void init()
{
 glClearColor(1.0,1.0,1.0,1.0);
 glMatrixMode(GL_PROJECTION);
 glLoadIdentity();
 gluOrtho2D(0.0,400.0,0.0,400.0);
}
int main(int argc,char**argv)
{
 glutInit(&argc,argv);
 glutInitDisplayMode(GLUT_SINGLE|GLUT_RGB);
 glutInitWindowSize(400,400);
 glutCreateWindow("Simple Grid using GL lines");
 init();
 glutDisplayFunc(display);
 glutMainLoop();
returnÂ 0;
}
